<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.template.mapper.UserOrderMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.project.template.entity.UserOrder">
                <result column="id" property="id" />
                    <result column="otype" property="otype" />
                    <result column="onumber" property="onumber" />
                    <result column="uid" property="uid" />
                    <result column="oprice" property="oprice" />
                    <result column="paystate" property="paystate" />
                    <result column="otime" property="otime" />
                    <result column="ostate" property="ostate" />
        </resultMap>



    <select id="selectOrdersWithProduct" resultType="com.project.template.entity.UserOrder">
        SELECT
        uo.*,
        p.name as productName
        FROM user_order uo
        LEFT JOIN product p ON uo.pid = p.id
        <where>
        <if test="query.name != null and query.name != ''">
        AND p.pname LIKE CONCAT('%', #{query.name}, '%')
        </if>
        </where>
    </select>




</mapper>
